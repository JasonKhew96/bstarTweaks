<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="主要功能">
        <SwitchPreference
            android:key="force_allow_download"
            android:title="强制启用下载" />
        <SwitchPreference
            android:key="clean_urls"
            android:title="清除跟踪链接" />
    </PreferenceCategory>
    <PreferenceCategory android:title="帐号">
        <Preference
            android:key="access_token"
            android:summary="@string/not_login"
            android:title="Access Token" />
        <Preference
            android:key="refresh_token"
            android:summary="@string/not_login"
            android:title="Refresh Token" />
        <Preference
            android:key="expires"
            android:summary="@string/not_login"
            android:title="Expires" />
    </PreferenceCategory>
    <PreferenceCategory android:title="关于">
        <Preference
            android:key="version"
            android:title="版本" />
        <!--        <Preference android:title="检查更新" android:key="check_update" />-->
        <Preference
            android:key="source_code"
            android:summary="https://github.com/JasonKhew96/bstarTweaks"
            android:title="源码" />
    </PreferenceCategory>
</PreferenceScreen>
